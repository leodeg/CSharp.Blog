@using Microsoft.AspNetCore.Http.Extensions
@model Blog.Models.Post

<section id="meta">
	<!-- sample fb meta -->
	<meta property="og:title" content="@Model.Title" />
	<meta property="og:type" content="article" />
	<meta property="og:url" content="@Context.Request.GetEncodedUrl()" />
	<meta property="og:image" content="~/content/img/@Model.ImagePath" />
	<meta property="og:description" content="@Model.Excerpt" />

	<!-- sample twitter meta -->
	<meta name="twitter:card" content="~/content/img/@Model.ImagePath">
	<meta name="twitter:site" content="@Context.Request.GetEncodedUrl()">
	<meta name="twitter:creator" content="@Context.Request.GetEncodedUrl()">
	<meta name="twitter:title" content="@Model.Title">
	<meta name="twitter:description" content="@Model.Excerpt">
	<meta name="twitter:image" content="~/content/img/@Model.ImagePath">
</section>

