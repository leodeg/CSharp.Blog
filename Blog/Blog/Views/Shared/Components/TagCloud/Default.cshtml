@model IEnumerable<Blog.Models.Tag>

<div class="card tagcloud my-4">
	<h5 class="text-center py-3">Tags Cloud</h5>
	<div class="container">

		<ul>
			<li>
				<a asp-controller="Posts" asp-action="Index" asp-route-tag=""><span>Show All</span></a>
			</li>
			@foreach (var tag in Model)
			{
				<li>
					<a asp-controller="Posts" asp-action="Index" asp-route-tag="@tag.Name"><span>@tag.Name</span> </a>
				</li>
			}
		</ul>
	</div>
</div>