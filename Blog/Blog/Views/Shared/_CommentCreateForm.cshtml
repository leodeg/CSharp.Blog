@model Blog.Models.ViewModels.CommentPostViewModel

<div class="row">
	<div class="col-md-12">
		<form asp-controller="Comments" asp-action="Create" id="form" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="@Model.Comment.UserName" class="control-label"></label>
				<input asp-for="@Model.Comment.UserName" class="form-control" />
				<span asp-validation-for="@Model.Comment.UserName" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="@Model.Comment.Message" class="control-label"></label>
				<textarea asp-for="@Model.Comment.Message" class="form-control"></textarea>
				<span asp-validation-for="@Model.Comment.Message" class="text-danger"></span>
			</div>

			<input type="hidden" asp-for="@Model.Comment.Id" />
			<input type="hidden" asp-for="@Model.PostId" />
			<input type="hidden" asp-for="@Model.ReturnUrl" />
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary btn-block" />
			</div>
		</form>
	</div>
</div>

