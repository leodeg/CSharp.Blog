@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
	ViewData["Title"] = "Roles List";
}

<div class="container">
	<h4>Roles List</h4>
	<!-- BODY -->
	<section id="table">
		<table class="table table-striped table-bordered table-hover">
			<thead class="thead-dark">
				<tr>
					<th>Role Name</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var role in Model)
				{
					<tr>
						<td>@role.Name</td>
						<td>
							<form asp-action="Delete" asp-route-id="@role.Id" method="post">
								@if (role.Name != Roles.Administrator && role.Name != Roles.Editor)
								{
									<button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure to delete this?');">
										<i class="fas fa-trash"></i> Delete
									</button>
								}
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
		<div class="d-flex justify-content-end">
			<a class="btn btn-primary" asp-action="Index"><i class="fas fa-arrow-left"></i> User List</a>
			<a href="#" class="btn btn-success" data-toggle="modal" data-target="#addCategoryModal"><i class="fas fa-plus"></i> Add Role</a>
		</div>

		<div class="modal fade" id="addCategoryModal">
			<div class="modal-dialog modal-lg">
				<div class="modal-content">
					<div class="modal-header bg-success text-white">
						<h5 class="modal-title">Add Role</h5>
						<button class="close" data-dismiss="modal">
							<span>&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<form asp-action="Create" method="post">
							<div class="form-group">
								<label for="name">New Role</label>
								<input name="name" class="form-control" required />
							</div>
							<button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> Add</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>


